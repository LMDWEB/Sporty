    </li>
{% endblock %}
{% block body %}
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ club_team.club.id }}</td>
            </tr>
            <tr>
                <th>Id_team</th>
                <td>{{ club_team.team.id }}</td>
            </tr>
            <tr>
                <th>Year_creation</th>
                <td>{{ club_team.yearCreation }}</td>
            </tr>
            <tr>
                <th>Address</th>
