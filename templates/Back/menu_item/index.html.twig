{% extends 'Back/base.html.twig' %}

{% block title %}Sous menu{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('menu_index') }}">Liste des menus</a>
    </li>
{% endblock %}

{% block body %}

    <a class="btn btn-success" href="{{ path('article_new') }}">
        <i class="fas fa-fw fa-plus"></i>
        Ajouter un nouvel article
    </a>

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Icon</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu_item in menu_items %}
            <tr>
                <td>{{ menu_item.id }}</td>
                <td>{{ menu_item.name }}</td>
                <td>{{ menu_item.url }}</td>
                <td>{{ menu_item.icon }}</td>
                <td>{{ menu_item.color }}</td>
                <td>
                    <a href="{{ path('menu_item_show', {'id': menu_item.id}) }}">show</a>
                    <a href="{{ path('menu_item_edit', {'id': menu_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}

    <!-- Page level plugin JavaScript-->
    <script src="{{ asset('back/vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/vendor/datatables/dataTables.bootstrap4.js') }}"></script>

    <!-- Demo scripts for this page-->
    <script src="{{ asset('back/js/demo/datatables-demo.js') }}"></script>

{% endblock %}